#!/bin/sh
# find $1 -type f -print0 | xargs -0 grep --color=auto $2を
# するシェルスクリプト
# 引数が1つの場合は、カレントディレクトリを$1で検索

COMMAND="${0##*/}"
usage() {
    echo "${COMMAND} [<dir>] <search name>"
    exit
}
[ "$1" = '-h' -o "$1" = '-help' ! ( $# -eq 1 -o $# -eq 2) ] && usage

[ "$#" eq 1 ] && ARG1=$1 && $1=1
#find "${DIR}" -type f -print0 | xargs -0 grep --color=auto $1
#ドットで始まるディレクトリは検索しない
find "${DIR}" -type f ! -regex ".*/\..*/.*" -print0 | xargs -0 grep --color=auto $1
