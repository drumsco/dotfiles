[alias]
    br = branch
    co = checkout
    ci = commit
    # 外部エディタを起動せず、diffを単語単位で
    di = diff --no-ext-diff --word-diff
    hist = "log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short"
    st = status
    rmt = remote -v
    # Githubのpushのurlをsshに変更
    rmtc = !git remote set-url --push `git remote -v | sed -e '1d' -e 's|://\\([^/]*\\)/\\([^(]*\\).*$|@\\1:\\2|'` && git remote -v
[color]
    ui = auto
[core]
    pager =
    editor = vim
[diff]
    external = git_diff_vim
    # 賢いdiff algorithm
    # http://www.justinleegrant.com/?p=339
    algorithm = patience
[merge]
    # tool = git_mergetool_vim
[mergetool "git_mergetool_vim"]
    # cmd = git_mergetool_vim vim $BASE $LOCAL $REMOTE $MERGED
    # trustExitCode = true
    # keepBackup = false
[pager]
    diff =
[push]
    default = matching

[include]
# includeが使えるかはgit config --global --includes -lで確かめる
    path = .gitconfig.local

