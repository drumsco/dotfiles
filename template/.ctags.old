--append=yes
--tag-relative
--recurse=yes
--php-kinds=cidfv
--exclude=.svn
--exclude=.git
--langmap=PHP:+.inc.tpl
--langmap=C:+.mq4
--regex-php=/^[ \t]*const[ \t]+([a-z0-9_]+)/\1/d/i
--regex-php=/abstract class ([^ ]*)/\1/c/
--regex-php=/interface ([^ ]*)/\1/c/
--regex-php=/(public |static |abstract |protected |private )+function ([^ (]*)/\2/f/
