#!/usr/bin/env bash
# terminalがmacで動いている用

stdin=`cat -`
if [ "$TERM" = 'screen' ];then
    # Tmuxのとき
    printf "\x1bPtmux;\x1b\x1b]52;;%s\x1b\x1b\\\\\x1b\\" `base64 <(echo $stdin)`
    # GNU Screenのとき
    # printf "\x1bP\x1b]52;;%s\x07\x1b\\" `base64 <(echo $stdin)`
else
    printf "\x1b]52;;%s\x1b\\" `base64 <(echo $stdin)`
fi
