--append=yes
--recurse=yes
--exclude=\"\.svn\" \
--langmap=PHP:+.inc.tpl
--php-kinds=cidfvj
--regex-php=/^[ \t]*const[ \t]+([a-z0-9_]+)/\1/d/i
--regex-php=/abstract class ([^ ]*)/\1/c/
--regex-php=/interface ([^ ]*)/\1/c/
--regex-php=/(public |static |ract |protected |private )+function ([^ (]*)/\2/f/
