startup_message off
autodetach on
defscrollback 10000
caption always "%{= wk} %-w%?%F%{=b kr}%:%{= kW}%? %n %t %{-}%+w"
#hardstatus alwayslastline "%{=b GK} %H[%n]: %l %{.b} %Y/%m/%d %c:%s"

#defkanji utf-8   defkanjiは設定しなくても大丈夫みたい
defencoding utf-8 #defaltのエンコード

#encoding utf-8 utf-8
#そのウィンドウのエンコード。
#defencodingで設定しているのでここで設定しなくてよい気がする
#むしろ特定のウィンドウのエンコードを変更したいときにこのコマンドを使う
#第一引数が文字のエンコード。第2引数が端末のエンコード
#例えば端末のエンコードがUTF-8でEUC-JPのファイルを見たい場合は
#Ctrl+A :encoding eucjpと打つ
#端末のエンコードはいじらなくてよい

escape ^Tt
vbell off
defmonitor on
bind l windowlist

#Vimのビジュアルモード風にコピー
markkeys ' =v'
markkeys ' =y'
#/?をインクリメンタルサーチに
markkeys "^S=/"
markkeys "^R=?"
bind p paste .

#256色対応
defbce on 
term xterm-256color
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

# Window関連
#rを打ってリサイズモード。j, kでウィンドウの大きさを変える。
#j,k以外のキーで終了
bind r eval 'echo "Resize window"' 'command -c resize'
#bind -c resize ^] command
bind -c resize ; eval 'resize +1' 'command -c resize'
bind -c resize - eval 'resize -1' 'command -c resize'

bind s split

#move current window
bind j focus down
bind ^j focus down
bind k focus up
bind ^k focus up

#close current window
bind q remove
bind ^q remove

#close all other windows
bind o only
bind ^o only

bind x kill
bind ^x kill
