# PATHの設定 {{{
# ------------------------------------------------------------------------------
# CentOS 6.3の/etc/profileにあるPATHを追加する関数
pathmunge () {
    case ":${PATH}:" in
        *:"$1":*)
            ;;
        *)
            if [ "$2" = "after" ] ; then
                PATH=$PATH:$1
            else
                PATH=$1:$PATH
            fi
    esac
}

# 実行ファイルがあるディレクトリに再帰的にPATHを通す
pathmungeR () {
    if [ -d $1 ]; then
        for i in `find $1 -type d \( -name .git -o -name .svn -o -name .hg \) -prune -o -type f -perm -u+x -exec dirname {} \; | uniq`
        do
            pathmunge $i $2
        done
    fi
}

# シェルスクリプトなどを置くディレクトリ
pathmunge ${HOME}/bin
# makeで作った実行ファイルなどを置くディレクトリ
pathmunge ${HOME}/local/bin
# 正規のコマンドがないときに使う仮のコマンドを置くディレクトリ
pathmunge $HOME/bin/pseudo after

pathmunge ~/git/tmsanrinsha/dotfiles/bin
