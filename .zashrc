# tmuxがインストールされていて、tmuxを起動していないときは自動起動
#ただし、.tmux.confでset-option -g default-terminal xterm-256colorと設定しているとする
if [ -x /usr/local/bin/tmux -a $TERM != 'xterm-256color' ];then 
    # すでに tmux セッションがある場合そこに接続し、なければ作成する
    tmux -2 a || tmux -2
fi

