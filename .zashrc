# Cygwin用のコマンドを置くディレクトリ
if [[ `uname` = CYGWIN* ]]; then
    pathmunge $HOME/bin/cygwin
    pathmunge ~/git/tmsanrinsha/dotfiles/bin/cygwin
fi

